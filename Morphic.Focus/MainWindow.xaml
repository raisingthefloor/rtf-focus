<Window x:Class="Morphic.Focus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Morphic.Focus"
        mc:Ignorable="d"  Width="100" Height="64" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent"
        Padding="0"
        AllowsTransparency="True" MouseMove="Window_MouseMove">

    <Border x:Name="WindowBorder"
            CornerRadius="5"
            BorderBrush="Black"
            BorderThickness="1"
            Background="White">
        
            <Button x:Name="btnMainFocus" Content="Focus" Background="#008145" Foreground="White" FontSize="14" FontWeight="Bold" Height="60" 
                    Click="btnMainFocus_Click"/>
        
    </Border>
</Window>
